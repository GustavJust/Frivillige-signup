---
import Layout from "../components/layout.astro";
import Header from "../components/header.astro";
import Intro from "../components/intro.astro";
import Opgaver from "../components/opgaver.astro";
import Stories from "../components/stories.astro";
import Faq from "../components/faq.astro";
import Cta from "../components/cta.astro";
import Kort from "../components/kort.astro";
import Footer from "../components/footer.astro";
---

<Layout>
  <section class="hero"><Header /></section>
  <section class="intro"><Intro /></section>
  <section class="opgaver"><Opgaver /></section>
  <section class="stories"><Stories /></section>
  <section class="faq"><Faq /></section>
  <section class="cta"><Cta /></section>
  <section class="map"><Kort /></section>
  <section class="footer"><Footer /></section>
</Layout>

<style>
  /* === CSS RESET === */
  /* Remove default margins, padding, and box sizing inconsistencies */
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Improve text rendering */
  html {
    scroll-behavior: smooth;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-size-adjust: 100%;
  }

  /* Remove default list styles */
  ul,
  ol {
    list-style: none;
  }

  /* Reset anchor tags */
  a {
    text-decoration: none;
    color: inherit;
  }

  /* Remove default button styling */
  button,
  input,
  textarea,
  select {
    font: inherit;
    border: none;
    background: none;
    outline: none;
  }

  /* Ensure images are responsive */
  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  /* Ensure full height */
  html,
  body {
    height: 100%;
  }

  @font-face {
    font-family: "work-sans";
    src: url(/assets/fonts/WorkSans-VariableFont_wght.woff) format("woff");
  }

  @font-face {
    font-family: "oliver";
    src: url(/assets/fonts/Oliver-Regular.woff) format("woff");
  }

  html {
    --primary-font: "work-sans";
    --secondary-font: "oliver";

    --primary-color: #006afa;
    --secondary-color: #0f172a;
    --tertiary-color: #fffdfa;
    --accent-color: #fd9215;

    --text-base-white: #ffffff;
    --text-base-dark: #000000;
    --text-subdued-primary: #343434;
    --text-subdued-secondary: #fffdfa;

    --section-spacing: 64px;
    --section-margin: 8px;
    --inner-padding: 8px;
    --text-spacing: 1em;
    --text-size: 1rem;
    --overskrift-size: 5rem;
    overflow-x: hidden;
  }

  /* Set a base font */
  body {
    font-family: var(--primary-font), sans-serif;
    margin: 0;
    overflow-x: hidden;
  }

  section {
    padding: 0 var(--section-margin) var(--section-spacing)
      var(--section-margin);
  }

  body {
    > .hero {
      background-color: var(--tertiary-color);
    }
    > .intro {
      background-color: var(--primary-color);
    }
    > .opgaver {
      background-color: var(--tertiary-color);
    }
    > .stories {
      background-color: var(--secondary-color);
    }
    > .faq {
      background-color: var(--primary-color);
    }
    > .cta {
      background-color: var(--tertiary-color);
    }
    > .map {
      background-color: var(--secondary-color);
    }
    > .footer {
      background-color: var(--secondary-color);
    }
  }
</style>
